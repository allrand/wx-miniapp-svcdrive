/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.checkbox-label{
  margin-top: 5px;
  margin-left: 10px;
  margin-bottom: 5px;
  margin-right: 20rpx;
  width: 100%;
  
}
.container {
    border-top:1rpx solid #e5e5e5;
    /* justify-content:center; */
    align-items:center;
    padding: 20rpx;
}
.header{
    display: flex;
    justify-content:center;
    align-items:center;
    padding: 20rpx;
    border: 1rpx solid #e0e0e0;
    box-shadow: 0 0 10rpx #e0e0e0;
    border-radius: 10rpx;
}
.header .plus {
    width: 41rpx;
    height: 41rpx;
    margin-right: 20rpx;
}
.header .input {
    flex: 1;
    font-size: 41rpx;
}
.footer {
    margin-top:30rpx 0rpx 0rpx 0rpx;
    display:flex;
}
.empty {
    display:flex;
}
.content{
    padding:200rpx 0;
}
.todo{
    width:100%;
    margin:20rpx;
}
.task-list{
    width:90%;
    display:flex;
    border: 1rpx solid #e0e0e0;
    border-radius: 10rpx;
    padding:20rpx;
    margin-left: 5px;
}
.task-list .task {
    flex:1
}
.completed .task {
    text-decoration: line-through
}
button{
    padding:0 15rpx;
    margin:0 25rpx;
    font-size:35rpx;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 70%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}